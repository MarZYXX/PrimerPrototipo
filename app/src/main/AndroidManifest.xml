<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ========== PERMISOS ========== -->
    <!-- Permisos de ubicación -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permisos de Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permiso para servicio en primer plano (Android 9+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Permiso para notificaciones (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Feature de ubicación (opcional pero recomendado) -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PrimerPrototipo"
        tools:targetApi="31">

        <!-- ========== API KEY DE GOOGLE MAPS ========== -->
        <!-- IMPORTANTE: Reemplaza YOUR_GOOGLE_MAPS_API_KEY con tu API Key real -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <!-- ========== ACTIVITIES ========== -->

        <!-- Activity Principal: Login -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity de Registro -->
        <activity
            android:name=".view.RegistroActivity"
            android:exported="false"
            android:parentActivityName=".view.LoginActivity" />

        <!-- Activity del Mapa (Usuario) -->
        <activity
            android:name=".view.MapaActivity"
            android:exported="false"
            android:parentActivityName=".view.LoginActivity" />

        <!-- Activity del Chofer -->
        <activity
            android:name=".view.ChoferActivity"
            android:exported="false"
            android:parentActivityName=".view.LoginActivity" />

        <!-- Activity de Admin -->
        <activity
            android:name=".view.AdminActivity"
            android:exported="false"
            android:parentActivityName=".view.LoginActivity" />

        <!-- Activity de SuperAdmin -->
        <activity
            android:name=".view.SuperAdminActivity"
            android:exported="false"
            android:parentActivityName=".view.LoginActivity" />

        <!-- Activity de Gestión de Cuentas -->
        <activity
            android:name=".view.GestionCuentasActivity"
            android:exported="false" />

        <!-- ========== SERVICIO DE UBICACIÓN EN PRIMER PLANO ========== -->
        <service
            android:name=".model.LocationForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

    </application>

</manifest>